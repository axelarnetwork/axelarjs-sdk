{
  "name": "@axelar-network/axelarjs-sdk",
  "version": "0.5.0-alpha.1",
  "description": "The JavaScript SDK for Axelar Network",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "dev:tsc": "tsc --watch -p .",
    "dev:serve": "nodemon -e js -w dist dist/index.js",
    "dev": "run-p dev:*",
    "test": "jest --config jest.json",
    "test:watch": "jest --watch --no-cache --config jest.json",
    "test:e2e": "jest --config test/e2e/jest.e2e.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"./**/*.{ts,json}\"",
    "compile": "hardhat compile"
  },
  "keywords": [
    "axelar",
    "blockchain",
    "sdk",
    "cryptocurrency",
    "interoperability",
    "smart-contracts"
  ],
  "author": "Axelar Network",
  "license": "MIT",
  "dependencies": {
    "@terra-money/terra.js": "^3.0.0",
    "@types/lodash": "^4.14.176",
    "@types/uuid": "^8.3.1",
    "bech32": "^2.0.0",
    "blockcypher": "^0.3.0",
    "cross-fetch": "^3.1.5",
    "eslint-plugin-import": "^2.25.4",
    "ethers": "^5.4.7",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "socket.io-client": "^4.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.12.1-alpha.14",
    "@typescript-eslint/parser": "^5.12.1-alpha.14",
    "eslint": "^8.9.0",
    "hardhat": "^2.9.1",
    "jest": "^27.5.1",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.5"
  }
}
