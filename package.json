{
  "name": "@axelar-network/axelarjs-sdk",
  "version": "0.11.4",
  "description": "The JavaScript SDK for Axelar Network",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist",
    "!dist/src/libs/test",
    "!dist/test"
  ],
  "scripts": {
    "build": "rimraf dist && tsc",
    "dev:tsc": "tsc --watch -p .",
    "dev:serve": "nodemon -e js -w dist dist/index.js",
    "dev": "run-p dev:*",
    "test": "jest --config jest.json",
    "test:watch": "jest --watch --no-cache --config jest.json",
    "test:e2e": "jest --config test/e2e/jest.e2e.json",
    "test:integration": "jest --config test/integration/jest.json --forceExit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"./**/*.{ts,json}\""
  },
  "keywords": [
    "axelar",
    "blockchain",
    "sdk",
    "cryptocurrency",
    "interoperability",
    "smart-contracts",
    "cross-chain"
  ],
  "author": "Axelar Network",
  "license": "MIT",
  "dependencies": {
    "@axelar-network/axelarjs-types": "^0.24.0",
    "@cosmjs/stargate": "^0.28.4",
    "@types/uuid": "^8.3.1",
    "bech32": "^2.0.0",
    "clone-deep": "^4.0.1",
    "cross-fetch": "^3.1.5",
    "ethers": "^5.4.7",
    "socket.io-client": "^4.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@axelar-network/axelar-local-dev": "1.0.2",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@types/clone-deep": "^4.0.1",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ganache": "^7.3.2",
    "jest": "^27.5.1",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "prettier": "2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.5"
  }
}
